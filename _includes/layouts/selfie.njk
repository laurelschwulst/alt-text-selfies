<div class="column">

    <div class="selfie-title">
        <img alt="sparkle" class="star" src="{{ site.url }}/assets/images/star01.svg"/>
        <h2>{{ title }}</h2>
    </div>

    {% if audio %}
    <button class="selfie-audio">Listen</button>
    <audio id="selfie" src="{{ site.url }}/assets/sounds/{{ audio }}" controls preload>
        Your browser does not support the audio element.
    </audio>
    {% endif %}

    <div class="content"> {{ content | safe }}</div>

</div>

