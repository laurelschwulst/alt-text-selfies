---
layout: layouts/base.njk
---

<div class="column">

    <div class="selfie-title">
        <div class="left">
            <img alt="sparkle" class="star" src="{{ site.url }}/assets/images/star{{ ((order) % 83 + 1).toString().padStart(2, '0') }}.svg"/>
            <h2>{{ title }}</h2>
        </div>
        {% include "layouts/menu_lateral.njk" %}
    </div>

    {% if audio %}
    <button class="selfie-audio">Listen</button>
    <audio id="selfie" src="{{ site.url }}{{ audio }}" controls preload data-transcript-src="{{ transcript }}">
        Your browser does not support the audio element.
    </audio>
    {% endif %}
    
    <div class="selfie-container">
        <div class="content" id="transcript">{{ content | safe }}</div>

        {# If the selfie has audio, its highlighting transcript will be placed in the following div so that it doesn't interfere with screen-readers #}
        <div class="content" id="selfie-transcript-overlay" aria-hidden></div>
    </div>

</div>