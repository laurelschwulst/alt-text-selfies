---
layout: layouts/base.njk
---

<div class="column">

    <div class="selfie-title">
        <div class="left">
            <img alt="sparkle" class="star" src="{{ site.url }}/assets/images/star{{ ((order) % 83 + 1).toString().padStart(2, '0') }}.svg"/>
            <h2>{{ title }}</h2>
        </div>
        {% include "layouts/menu_lateral.njk" %}
    </div>

    {% if audio %}
    <button class="selfie-audio">Listen</button>
    <audio id="selfie" src="{{ site.url }}{{ audio }}" controls preload data-selfie-name="{{ page.fileSlug }}">
        Your browser does not support the audio element.
    </audio>
    {% endif %}

    <div class="content" id="transcript">{{ content | safe }}</div>

</div>